<div class="container">
    <h1>Passager, faites votre demande de reservation de courses !</h1>
    <form action="/courses" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Depart</label>
                <input class="form-control" placeholder="Depart" type="string" name="co_prise_charge">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Arrivée</label>
                <input class="form-control" placeholder="Arrivée" type="string" name="co_destination">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress2">Date de depart</label>
            <input class="form-control" placeholder="AAAA-MM-JJ" type="string" name="co_date">
        </div>

        <div class="form-group">
            <label for="inputCity">Heure de depart</label>
            <input class="form-control" type="string" placeholder="HH:mm:ss" name="co_heure">
        </div>

        <div class="form-group">
            <label class="control-label">Nombre de place</label>
                <br>
                <select class="form-group" id="sel1" name="co_place_necessaire" type="int">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>

        <div style="text-align:center">
            <button type="submit" class="btn btn-warning" value="Envoyer">ENREGISTRER</button>
        </div>
    </form>