    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') ×
        h4#exampleModalLabel.modal-title Identification
      .modal-body
        form(action='', method='post')
          .form-group
            label.control-label(for='POST_email') Email
            input#POST_email.form-control(type='text')
          .form-group
            label.control-label(for='POST_mdp') Mot de passe
            input#POST_mdp.form-control(type='password')
      .modal-footer
        button.btn.btn-danger(type='button', data-dismiss='modal') Fermer
        input.btn.btn-primary(type='submit', value='Envoyer')
  
